<!-- 轮播图 -->
<view class='carousel'> 
  <swiper class='carousel_swiper' indicator-dots="true" indicator-color="white" indicator-active-color="#A82127" autoplay="true" interval='4000' circular='true'>
    <block wx:for="{{bannerDataList}}" wx:key="key" >
      <swiper-item bindtap='chomeCarouselClick'>
        <image src='{{item.imagePath}}' mode='scaleToFill' style="width:100%;height=200rpx"></image>
      </swiper-item>
    </block>
  </swiper>
 </view>


    <scroll-view  scroll-y='true' style='height:100%;' >
    <view style="width: 100%;display: inline-block; justify-content:space-around;flex-direction:column;background-color:white;margin-left:5rpx;margin-right:5rpx;margin-top:5rpx" wx:for="{{articalListBeans}}" wx:key="{{articalListBeans}}">

    <text>{{item.title}}</text>
   
      
     
  

    </view>
 </scroll-view>

