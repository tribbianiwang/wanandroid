<!--index/system/system.wxml-->

    <scroll-view  scroll-y='true' style='height:100%;' >
    <view  wx:for="{{systemListBeans}}" wx:key="id">
    <view style="margin-left:20rpx;margin-top:30rpx" bindtap="onArticleItemClick" data-url="{{item.link}}">


<view style="display: flex;flex-direction: row;justify-content: space-between;align-items:center;">
    <view>
    <view >
    <text style="width:100%;font-size:14px;color:black;margin-top:20rpx">{{item.name}}</text>
      </view>
      <view wx:for="{{item.children}}" style=" display:inline-block;flex-direction:row;justify-content:space-between;flex-wrap:wrap;white-space: nowrap;">
       <text style="width:fit-content;font-size:12px;color:gray;margin-left:15rpx;margin-right:15rpx">{{item.name}}</text> 
      </view>

      </view>

      <view>
       <image src="../../img/icon_arrow_right_gray.png"  style="width:40rpx;height:40rpx;margin-right:25rpx" mode="aspectFit"></image>
      </view>
      
     </view>
    

</view>

  <view class="grayWhiteLine" style="margin-top:30rpx"></view>
    </view>
 </scroll-view>
